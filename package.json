{
  "name": "zeek-mcp",
  "version": "1.0.0",
  "description": "MCP server for Zeek network analysis framework - query and analyze Zeek logs via AI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zeek-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "generate-logs": "tsx scripts/generate-zeek-logs.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Solomon Neas <me@solomonneas.dev>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
